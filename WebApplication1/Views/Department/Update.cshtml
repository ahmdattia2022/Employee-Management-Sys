@model WebApplication1.Models.DepartmentVM

@{
    ViewBag.Title = "Update";
}



<form asp-controller="department" asp-action="Update" method="post" class="form-group">
    @*<input type="text" asp-for="DeptId" hidden />*@

    <label asp-for="Name">Name</label>
    <input type="text" asp-for="Name"  class="form-control" placeholder="Please enter department name..." />
    <span class="text-danger" asp-validation-for="Name"></span> 
    <br />

    <label asp-for="Code">Department Code</label>
    <input type="text" asp-for="Code" class="form-control" placeholder="Please enter department code..." />
    <span class="text-danger" asp-validation-for="Code"></span>
    <br />


    <center>
        <input type="submit" class="btn btn-primary" value="Up" />
    </center>

</form>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


