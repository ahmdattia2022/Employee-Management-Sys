@model WebApplication1.Models.DepartmentVM
@{
    ViewBag.Title = "Delete";
}


<h2 class="FontCourier">Delete Department</h2>

<form asp-controller="department" asp-action="Delete" method="post" class="form-group">

    <label asp-for="Name">Name</label>
    <input type="text" asp-for="Name" class="form-control" disabled/>
    <br />

    <label asp-for="Code">Department Code</label>
    <input type="text" asp-for="Code" class="form-control" disabled/>
    <br />


    <center>
        <input type="submit" class="btn btn-primary" value="Delete" />
    </center> 

</form>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


